<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
	<union-subclass abstract="true"
		name="com.processpuzzle.order.domain.order.Order"
		table="T_ORDER"
		extends="com.processpuzzle.fundamental_types.domain.GenericEntity">
		<!-- <key column="T_ORDER_ID"/> -->
		<property name="salesChannel"></property>
		<property name="termsAndConditions"></property>
		<property name="status" type="integer"></property>
		
		<component name="orderidentifier" class="com.processpuzzle.order.domain.order.OrderIdentifier">
			<property name="identifier" column="orderidentifier"/>
		</component>

		<component name="dateCreated" class="com.processpuzzle.fundamental_types.domain.TimePoint">
			<property name="value" column="creationDate" type="java.util.Date"></property>
		</component>
		
		<many-to-one name="salesAgent" cascade="all"
			class="com.processpuzzle.party.domain.PartySummary"
			column="salesAgent"
			unique="true"/>

		<many-to-one name="paymentReceiver" cascade="all"
			class="com.processpuzzle.party.domain.PartySummary"
			column="paymentReceiver"
			unique="true"
			not-null="true"/>

		<many-to-one name="vendor" cascade="all"
			class="com.processpuzzle.party.domain.PartySummary"
			column="vendor"
			unique="true"
			not-null="true"/>

		<many-to-one name="orderInitiator" cascade="all"
			class="com.processpuzzle.party.domain.PartySummary"
			column="orderInitiator"
			unique="true"
			not-null="true"/>

		<many-to-one name="purchaser" cascade="all"
			class="com.processpuzzle.party.domain.PartySummary"
			column="purchaser"
			unique="true"
			not-null="true"/>

		<many-to-one name="orderReceiver" cascade="all"
			class="com.processpuzzle.order.domain.order.DeliveryReceiver"
			column="orderReceiver"
			unique="true"/>

		<many-to-one name="contactPerson" cascade="all"
			class="com.processpuzzle.party.domain.PartySummary"
			column="contactPerson"
			unique="true"/>

		<many-to-one name="appliedPriceType" cascade="none"
			class="com.processpuzzle.product.domain.pricetype.PriceType"
			column="appliedPriceType"/>

		<set name="orderlines" 
			cascade="all, delete-orphan">
			<key column="ORDER_ID" not-null="true"/>
			<one-to-many class="com.processpuzzle.order.domain.order.OrderLine"/>
		</set>

		<set name="orderEvents" 
			cascade="all, delete-orphan">
			<key column="ORDER_ID" not-null="true"/>
			<one-to-many class="com.processpuzzle.order.domain.order.OrderEvent"/>
		</set>

<!--		<set name="chargelines" 
			cascade="all, delete-orphan">
			<key column="ORDER_ID" not-null="true"/>
			<one-to-many class="com.processpuzzle.order.domain.order.ChargeLine"/>
		</set>
 -->
<!--
 		<component name="chargeline" class="com.processpuzzle.archetypes.order.domain.order.ChargeLine">
			<property name="comment"/>
			<property name="description"/>
		</component>
 -->		
	</union-subclass>
</hibernate-mapping>